<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" crossorigin="anonymous">
<script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<h2 class="text-2xl font-bold tracking-tight text-gray-900"><%=title%></h2>
<table id="comments" class="min-w-full divide-y divide-gray-300">
  <thead>
    <tr>
      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Mensaje</th>
      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Fecha</th>
      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Nota</th>
    </tr>
  </thead>
  <tbody class="bg-white">
    <% comments.each do |comment| %>
      <tr class="even:bg-gray-50">
        <td class="px-3 py-4 text-lg text-gray-500"><%=comment.message%></td>
        <td class="whitespace-nowrap px-3 py-4 text-lg text-gray-500"><%=comment.created_time%></td>
        <td class="px-3 py-4 text-lg text-gray-500"><%=comment.entry.title%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $(document).ready( function () {
    new DataTable('#comments', {
      order: [[1, 'desc']],
      language: {
        url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json',
      },
      "pageLength": 100,
      "lengthChange": false,
    });
  });
</script>
